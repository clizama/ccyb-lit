  pages = {S76-S86},
  issn = {00221996},
  doi = {10.1016/j.jinteco.2016.12.012},
  urldate = {2025-11-17},
  abstract = {We discuss unconventional policies in an open economy where financial intermediaries face occasionally binding collateral constraints. The model highlights interactions among the real exchange rate, interest rates, and financial frictions. The real exchange rate can affect international credit constraints via a net worth effect and a novel leverage ratio effect. Unconventional policies are non-neutral if financial constraints bind. Credit programs are most effective when targeted towards financial intermediaries. Sterilized interventions matter because the increased availability of tradables associated with sterilization relaxes financial frictions. \copyright{} 2017 Elsevier B.V. All rights reserved.},
  langid = {english}
}

@article{cespedesOptimalForeignReserves2024,
